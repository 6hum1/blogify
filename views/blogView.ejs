<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <title>Blog</title>
</head>
<body>
     <%- include('./partials/nav.ejs') %>
    <div class="container mt-3">
            <h1><%= blog.title %></h1>
            <img src="/<%= blog.coverImage %>" alt="Image" width="700px" "/>
            <p><%= blog.body %></p>
        </div>
        <div class="container mt-3">
            <img src="<%= blog.createdBy.profileImageURL %>" alt="avatar" width="50px"> <%= blog.createdBy.fullName %>
    </div>
        
    <% if (locals.user) { %>
     <div class="container mt-3">
        <form action="/blog/comment/<%= blog._id %>" method="post" >
             <div class="mb-3">
            <label for="content" class="form-label">Comment</label>
             <input type="text" class="form-control" id="content" name="content" placeholder="Post your comment">
            </div>
            <div class="mb-3">
            <button type="submit" class="btn btn-primary">Submit</button></div>
        </form>
    </div>
    <% } %>
    <div class="container mt-3">
        <h2>Comments</h2>
        <% allComments.forEach(comment => { %>
            <div class="card mt-2">
            <div class="card-body">
                <div class="container mt-3">
                    <img src="<%= comment.createdBy.profileImageURL %>" alt="avatar" width="20px"><span><strong>  <%= comment.createdBy.fullName.toUpperCase() %></strong></span>
                </div>
                <p class="card-text mt-1">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= comment.body %></p>
            </div>
            </div>
      <% }) %>
    </div>
   <%- include('./partials/script.ejs') %>
</body>
</html>